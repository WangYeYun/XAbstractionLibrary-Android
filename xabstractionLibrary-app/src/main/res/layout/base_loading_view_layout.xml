<?xml version="1.0" encoding="utf-8"?>
<com.framework.ui.loadingview.BaseLoadingView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_vertical">

    <LinearLayout
        android:id="@+id/request_loading_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone">
        <TextView
            android:id="@+id/request_loading_state_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="..."
            android:gravity="center_horizontal"/>
    </LinearLayout>

</com.framework.ui.loadingview.BaseLoadingView>
