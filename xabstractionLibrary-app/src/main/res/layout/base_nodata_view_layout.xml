<?xml version="1.0" encoding="utf-8"?>
<com.framework.ui.nodataview.BaseNoDataView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_vertical">
    <LinearLayout
        android:id="@+id/noData_Content_id"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/noData_tip_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="似乎无数据啊，亲！"
            android:gravity="center_horizontal"/>

        <Button
            android:id="@+id/noData_Set_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="重试一下下"
            android:gravity="center_horizontal" />
    </LinearLayout>
</com.framework.ui.nodataview.BaseNoDataView>
